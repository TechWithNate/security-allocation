<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".JobAssignDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/baseline_arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Assign User"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_detail_layout">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="65dp"
            app:cardBackgroundColor="@color/white"
            app:strokeWidth="0dp"
            android:id="@+id/img_card">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/user_image"
                android:id="@+id/user_img"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_account_circle_24"/>

        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_card"
            android:layout_marginStart="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:id="@+id/name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:id="@+id/email"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/name"
                android:textColor="@color/black"/>


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/assign_details_layout"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/user_detail_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Details"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/detail_txt"/>

<!--        ;asjdf ioas;dfj-->
        <TextView
            android:id="@+id/location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_txt"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="7dp"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_txt"
            android:autofillHints="postalAddress"
            android:background="@drawable/txt_bg"
            android:hint="Location"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHighlight="#757575" />

        <TextView
            android:id="@+id/location_url_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_name"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp"
            android:text="Location URL"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/location_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_url_txt"
            android:autofillHints="postalAddress"
            android:background="@drawable/txt_bg"
            android:hint="https://location"
            android:textColor="@color/black"
            android:textColorHighlight="#757575"
            android:inputType="textUri" />

        <TextView
            android:id="@+id/shift_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location_url"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp"
            android:text="Shift"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/shift_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shift_txt"
            android:layout_marginTop="7dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
            android:textColorHint="#757575">

            <AutoCompleteTextView
                android:id="@+id/shift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                style="@style/CustomAutoCompleteTextView"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/start_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shift_layout"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp"
            android:text="Start Date"
            android:textColor="@color/black"
            android:textSize="15sp" />


<!--        TODO: Start Date goes here-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/start_date_layout"
            app:strokeWidth="1dp"
            android:layout_below="@+id/start_date_txt"
            app:cardCornerRadius="5dp"
            app:rippleColor="@color/accent_color"
            android:elevation="5dp"
            app:strokeColor="@color/black"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_calendar_month"
                    android:layout_centerVertical="true"
                    android:id="@+id/calendar_img"/>


                <RelativeLayout
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/calendar_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@color/black"
                        android:id="@+id/date_txt"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apr 24, 2022"
                        android:layout_below="@+id/date_txt"
                        android:textColor="@color/black"
                        android:id="@+id/etDate"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thur"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:id="@+id/etDay"/>

                </RelativeLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/baseline_keyboard_arrow_down"
                    android:layout_marginTop="10dp"
                    android:id="@+id/arrow_down"/>

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/end_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_date_layout"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp"
            android:text="End Date"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!--        TODO: End Date goes here-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/end_date_layout"
            android:layout_below="@+id/end_date_txt"
            app:cardCornerRadius="5dp"
            app:strokeColor="@color/black"
            app:rippleColor="@color/accent_color"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_calendar_month"
                    android:layout_centerVertical="true"
                    android:id="@+id/end_calendar_img"/>


                <RelativeLayout
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/end_calendar_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@color/black"
                        android:id="@+id/e_date_txt"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apr 24, 2022"
                        android:layout_below="@+id/e_date_txt"
                        android:textColor="@color/black"
                        android:id="@+id/e_etDate"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thur"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:id="@+id/e_etDay"/>

                </RelativeLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/baseline_keyboard_arrow_down"
                    android:layout_marginTop="10dp"
                    android:id="@+id/e_date_arrow_down"/>

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@+id/end_date_layout">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:id="@+id/start_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/start_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:textColor="@color/black" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/start_time_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/start_txt"
                    android:layout_marginTop="5dp"
                    android:padding="7dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/black">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/start_clock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_access_time" />

                        <TextView
                            android:id="@+id/start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/start_clock"
                            android:text="08:00 PM"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginStart="10dp"
                android:id="@+id/end_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/end_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Time"
                    android:textColor="@color/black" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/end_time_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/end_txt"
                    android:layout_marginTop="5dp"
                    android:padding="7dp"
                    app:cardBackgroundColor="@color/white"
                    app:strokeColor="@color/black">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/end_clock"
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_access_time" />

                        <TextView
                            android:id="@+id/end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/end_clock"
                            android:text="12:00 PM"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/contact_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_layout"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp"
            android:text="Contact Number"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_txt"
            android:autofillHints="postalAddress"
            android:background="@drawable/txt_bg"
            android:hint="0XX XXX XXXX"
            android:textColor="@color/black"
            android:textColorHighlight="#757575"
            android:inputType="phone" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:text="Assign Task"
            app:backgroundTint="#536DFE"
            app:cornerRadius="10dp" />

        <!--        ;asjdf ioas;dfj-->




    </RelativeLayout>

    </RelativeLayout>


</ScrollView>