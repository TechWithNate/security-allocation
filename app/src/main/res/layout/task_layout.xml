<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/loc_layout"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_location"
                android:layout_centerVertical="true"
                android:id="@+id/loc_icon"
                android:contentDescription="Loc Icon"/>

            <TextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/loc_icon"
                android:layout_marginEnd="20dp"
                android:singleLine="true"
                android:text="Accra Technical University"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/s_time_layout"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/loc_layout"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_time"
                android:layout_centerVertical="true"
                android:id="@+id/s_time_icon"
                android:contentDescription="Time Icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:id="@+id/tv_s_time"
                android:layout_toEndOf="@+id/s_time_icon" />

            <TextView
                android:id="@+id/s_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 AM"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/tv_s_time" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/e_time_layout"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/s_time_layout"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_timer_of"
                android:layout_centerVertical="true"
                android:id="@+id/e_time_icon"
                android:contentDescription="End Time Icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Time"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:id="@+id/tv_e_time"
                android:layout_toEndOf="@+id/e_time_icon" />

            <TextView
                android:id="@+id/e_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:00 AM"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/tv_e_time" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="08/06/2024"
            android:textColor="@color/black"
            android:drawableStart="@drawable/baseline_date"
            android:layout_below="@+id/e_time_layout"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:drawablePadding="20dp"
            android:textSize="15sp"/>


<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/baseline_phone"-->
<!--            android:layout_below="@+id/date"-->
<!--            android:layout_marginStart="20dp"-->
<!--            android:layout_marginEnd="5dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:id="@+id/contact_icon"-->
<!--            android:contentDescription="Time Icon"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact"
            android:text="0XX XXX XXXX"
            android:drawableStart="@drawable/baseline_phone"
            android:layout_below="@+id/date"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:drawablePadding="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>

    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>